{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es2018",
        "baseUrl": "./src",
        "module": "commonjs",
        "esModuleInterop": true,
        "outDir": "dist",

        "strict": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "allowUnreachableCode": false,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*",
        "tests/**/*"
    ]
}
